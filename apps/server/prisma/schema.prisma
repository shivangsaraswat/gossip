generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum AccountStatus {
  PENDING_VERIFICATION
  ACTIVE
  SUSPENDED
}

enum OtpType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  username     String        @unique
  displayName  String
  passwordHash String
  status       AccountStatus @default(PENDING_VERIFICATION)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  otpCodes OtpCode[]
  sessions Session[]

  // Follow relationships
  sentFollowRequests     FollowRequest[] @relation("SentRequests")
  receivedFollowRequests FollowRequest[] @relation("ReceivedRequests")
  following              Follow[]        @relation("Following")
  followers              Follow[]        @relation("Followers")

  // Recent search relationships
  recentSearches RecentSearch[] @relation("RecentSearches")
  searchedBy     RecentSearch[] @relation("SearchedBy")

  @@index([email])
  @@index([username])
  @@map("users")
}

model OtpCode {
  id        String    @id @default(cuid())
  userId    String
  code      String
  type      OtpType
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type])
  @@index([code, type])
  @@map("otp_codes")
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  refreshToken String   @unique
  deviceInfo   String?
  ipAddress    String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([refreshToken])
  @@map("sessions")
}

model FollowRequest {
  id         String   @id @default(cuid())
  senderId   String
  receiverId String
  createdAt  DateTime @default(now())

  sender   User @relation("SentRequests", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("ReceivedRequests", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([senderId, receiverId])
  @@index([receiverId])
  @@index([senderId])
  @@map("follow_requests")
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower  User @relation("Following", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("Followers", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("follows")
}

model RecentSearch {
  id             String   @id @default(cuid())
  userId         String
  searchedUserId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user         User @relation("RecentSearches", fields: [userId], references: [id], onDelete: Cascade)
  searchedUser User @relation("SearchedBy", fields: [searchedUserId], references: [id], onDelete: Cascade)

  @@unique([userId, searchedUserId])
  @@index([userId])
  @@map("recent_searches")
}
